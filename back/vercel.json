{
  "version": 2,
  "builds": [
    {
      "src": "back/app.js",  // Path to the backend entry file in the back folder
      "use": "@vercel/node"
    },
    {
      "src": "frontened/frontend/package.json",  // Correct path to your frontend's package.json
      "use": "@vercel/static-build",
      "config": { "distDir": "frontened/frontend/build" }  // Path to the build directory of your frontend
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  // This matches your backend API routes
      "dest": "/back/app.js"
    },
    {
      "src": "/(.*)",  // This serves your frontend files (static)
      "dest": "/frontened/frontend/build/index.html"
    }
  ],
